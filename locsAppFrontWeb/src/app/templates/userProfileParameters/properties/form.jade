md-card()
  md-card-content
    div(layout="row" layout-align="center")
      form(name="modifyProfilForm" novalidate ng-submit="modifyProfilForm.$valid && modifyProfil.submit()"
      flex-xs="100" flex-sm="80" flex-md="60" flex="50")
        section(layout="column", layout-align="start center")

          md-input-container.md-icon-float.md-block(layout-fill)
            md-icon(md-svg-src="../assets/icons/gender-male-female.svg")
            md-radio-group(ng-model="profileParams.user.gender" layout="row" layout-fill)
              span Man
              md-radio-button(value="Man" class="md-primary" aria-label="man")
              span Woman
              md-radio-button(value="Woman" aria-label="woman")


          md-input-container.md-icon-float.md-block(layout-fill)
            md-icon(md-svg-src="../assets/icons/profil/account.svg")
            input(placeholder="First name" type='text' name="first_name"
            ng-model="profileParams.user.first_name"
            ).body-register-container-md
          md-input-container.md-icon-float.md-block(flex-offset="10" style="width:90%")
            input(placeholder="Last name" type="text" name="last_name" ng-model="profileParams.user.last_name")
            .body-register-container-md

          md-input-container.md-icon-float.md-block(layout-fill)
            md-icon(md-svg-src="../assets/icons/profil/phone.svg")
            input(placeholder="Phone number" type="text" name="phone_number"
            ng-model="profileParams.user.phone_number")
            .body-register-container-md

          md-input-container.md-icon-float.md-block(layout-fill)
            md-icon(md-svg-src="../assets/icons/profil/cake-variant.svg")
            input(placeholder="Birthdate" type="text" name="birtdate" ng-model="profileParams.user.birthdate")
            .body-register-container-md

          md-input-container.md-icon-float.md-block(layout-fill)
            md-icon(md-svg-src="../assets/icons/register-login/ic_email_black_24px.svg")
            input(placeholder="Email" type="email" name="email" ng-model="profileParams.user.email")
            .body-register-container-md
            div(ng-messages="modifyProfilForm.email.$error" ng-if='!modifyProfilForm.email.$pristine'
            minlength="8" maxlength="100" required name="email" ng-pattern="/^.+@.+\..+$/")
              div(ng-message="required") This is required.
              div(ng-message="minlength") The email must be longer than 8 characters.
              div(ng-message="maxlength") The email must be shorter than 100 characters.
              div(ng-message="pattern") The field must be an email.

          md-input-container.md-icon-float.md-block(layout-fill)
            md-icon(md-svg-src="../assets/icons/register-login/ic_repeat_black_24px.svg" class="name")
            input(placeholder="Repeat Email" type="email" minlength="8" maxlength="100" required
            name="email_repeat" ng-model="profileParams.user.email_repeat" ng-pattern="/^.+@.+\..+$/" match="email").body-register-container-md
            div(ng-messages="modifyProfilForm.email_repeat.$error" ng-if='!modifyProfilForm.email_repeat.$pristine')
              div(ng-message="required") This is required.
              div(ng-message="minlength") The email must be longer than 8 characters.
              div(ng-message="maxlength") The email must be shorter than 100 characters.
              div(ng-message="pattern") The field must be an email.
              div(ng-message="match") Emails must match.


          div.submit-buttons(layout-fill)
            md-button.special-button.md-raised.margin-button-top(type="submit"
            style="width:100%") Send


