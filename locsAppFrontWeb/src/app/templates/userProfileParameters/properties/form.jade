md-card()
  md-card-content
    div(layout="row" layout-align="center")
      form(name="modifyProfilForm" novalidate ng-submit="modifyProfilForm.$valid && modifyProfil.submit()"
      flex-xs="100" flex-sm="80" flex-md="60" flex="50")
        section(layout="column", layout-align="start center")

          md-input-container.md-icon-float.md-block(layout-fill)
            md-icon(md-svg-src="../assets/icons/register-login/ic_mood_black_24px.svg"
            class="name")
            md-radio-group(ng-model="data.group1" layout="row" layout-fill)
              span Man
              md-radio-button(value="Man" class="md-primary" aria-label="man")
              span Woman
              md-radio-button(value="Woman" aria-label="woman")


          md-input-container.md-icon-float.md-block(layout-fill)
            md-icon(md-svg-src="../assets/icons/register-login/ic_mood_black_24px.svg"
            class="name")
            input(placeholder="First name" type='text' name="first_name"
            ng-model="first_name"
            ).body-register-container-md
          md-input-container.md-icon-float.md-block(flex-offset="10" style="width:90%")
            input(placeholder="Last name" type="text" name="last_name" ng-model="last_name")
            .body-register-container-md

          md-input-container.md-icon-float.md-block(layout-fill)
            md-icon(md-svg-src="../assets/icons/register-login/ic_mood_black_24px.svg")
            input(placeholder="Phone number" type="text" name="phone_number"
            ng-model="phone_number")
            .body-register-container-md

          md-input-container.md-icon-float.md-block(layout-fill)
            md-icon(md-svg-src="../assets/icons/register-login/ic_mood_black_24px.svg")
            input(placeholder="Birthdate" type="text" name="birtdate" ng-model="birthdate")
            .body-register-container-md

          md-input-container.md-icon-float.md-block(layout-fill)
            md-icon(md-svg-src="../assets/icons/register-login/ic_mood_black_24px.svg")
            input(placeholder="Email" type="email" name="email" ng-model="email"
            value="toto@hotmail.fr")
            .body-register-container-md


          div.submit-buttons(layout-fill)
            md-button.md-raised.margin-button-top(flex-offset="10" type="submit"
            style="width:90%") Send


