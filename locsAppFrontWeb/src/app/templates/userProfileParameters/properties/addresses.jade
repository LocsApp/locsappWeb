              ng-md-icon(ng-if="value" icon="star" size="22")
              ng-md-icon.grey(ng-if="!value" icon="star" style="fill:'grey'" size="22")
          p {{ notation.description | limitTo: 30 }} {{notation.description.length > 30 ? '...' : ''}}

    .add-entity
      md-button.md-fab.md-primary(ng-click="profileParams.addAddressDialog($event, 0)"
      aria-label="Edit your profileParams")
        ng-md-icon(icon="edit")


