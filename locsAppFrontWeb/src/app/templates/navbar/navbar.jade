md-toolbar(layout="row", layout-align="space-between center" ng-controller="NavBarController as navbar").locsapp-navbar-gt-sm
  span
    span(ui-sref="main.homepage" style="cursor: pointer;").md-toolbar-tools Locsapp
  div(layout="row" ng-if="!main.is_authenticated()")

    div
      span.icon-and-title
        a(href='#' ui-sref="main.login")
          ng-md-icon(icon="login" size="38")
          span.title Log in

    div
      span.icon-and-title
        a(href='#' ui-sref="main.register")
          ng-md-icon(icon="person_add" size="38")
          span.title Sign in
  div(layout='row' ng-if="main.is_authenticated()")
    //include ./notifications.jade

    div
      span.icon-and-title
        a(href='#' ui-sref="main.article_search")
          ng-md-icon(icon="search" size="38")
          span.title Search

    div
      span.icon-and-title
        a(href='#' ui-sref="main.article_create")
          ng-md-icon(icon="create" size="38")
          span.title Create an article



    div.submenu
      span.icon-and-title
        md-menu
          a(href='#' ng-click='navbar.openMenuAccount($mdOpenMenu, $event)')
            ng-md-icon(md-menu-origin='' icon="account_box" size="38" )
            span.title My account
          md-menu-content.submenu(width='4')

            md-menu-item
              a.submenu(href='#' ui-sref="main.user_profile")
                ng-md-icon(icon="perm_identity" size="35" )
                span.submenu.subtitle My informations
            md-divider


            md-menu-item
              a.submenu(href='#' ui-sref="main.profile_management")
                ng-md-icon(icon="create" size="35")
                span.submenu.subtitle Edit my profile
            md-divider

            md-menu-item
              a.submenu(href='#' ui-sref="main.homepage")
                ng-md-icon(icon="history" size="35")
                span.submenu.subtitle History



    div
      span.icon-and-title
        a(href='#' ui-sref="main.logout")
          ng-md-icon(icon="logout" size="38")
          span.title Log out


