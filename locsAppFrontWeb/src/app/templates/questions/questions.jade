.questions(ng-controller="QuestionsController as questions" layout="row" layout-align="center" )
  div(flex-xs="100" flex-sm="100" flex-md="100" flex="100")

    div(layout="row" layout-align="center")
      h1.t-center(flex="20") My questions


    div(layout="row" layout-align="center")
      md-divider.separator-h2(flex="35" hide-sm)
      h2.t-center(flex="30") Questions I have asked
      md-divider.separator-h2(flex="35" hide-sm)


    // Questions user asked Pagination
    div.search-article-toolbar(ng-if='questions.articlesWithQuestionUserAsked.length >= 1')
      md-toolbar(style="background-color:none" layout="row")
        span.flex
        ng-md-icon(icon="keyboard_arrow_left" ng-click='questions.prevOrNextPageQuestionsUserAsked(questions.current_page_questions_user_asked - 1)' ng-if="questions.current_page_questions_user_asked != 1").arrow-previous-page
        span.pagination-toolbar-search-article
          span(paging paging-action="questions.goToPageQuestionsUserAsked(page)"  page="questions.current_page_questions_user_asked" page-size="questions.page_size" total="questions.nb_items_questions_user_asked" active-class="current-page-selected-search-article")
        //span(style="margin-right: 20px;" ng-if="articleSearch.search._pagination.page_number >= articleSearch.totalItems / articleSearch.search._pagination.items_per_page")
        ng-md-icon(icon="keyboard_arrow_right" ng-click='questions.prevOrNextPageQuestionsUserAsked(questions.current_page_questions_user_asked + 1)' ng-if="questions.current_page_questions_user_asked != questions.nb_page_questions_user_asked").arrow-next-page
    md-divider.flex
                // End Pagination Questions user asked


    // Grid article question user asked
    div.article-history-as-renter(ng-class="notationAsRenter.animatePagination" ng-cloak)
      div.delimiter
      div.delimiter
      section(layout="row", layout-align="start start")
        div(layout-margin style="margin-top: 0px;").flex
          div(ng-if='questions.articlesWithQuestionUserAsked.length == 0')
            div(layout='row' layout-align='center')
              p You did not ask a question about any article
          md-grid-list(md-cols-xs="1" md-cols-sm="2" md-cols-md="3" md-row-height="100px" md-cols-gt-md="4" md-gutter="20px")
            md-grid-tile(style="background: yellow;" md-colspan="1" md-rowspan="2"
            ng-if='questions.articlesWithQuestionUserAsked.length > 0'
            ng-repeat='article in questions.articlesWithQuestionUserAsked track by $index')
              md-card(layout-fill ng-click='questions.goToArticlePage(article._id)')
                md-card-content
                  div(layout='row')
                    img(ng-src="{{ questions.url_api + article.url_thumbnail }}")
                    div(layout='column')
                      h3 {{article.title}}
                      p {{article.description | limitTo:questions.limitDescription}} <span ng-if='article.description.length > questions.limitDescription'>...</span>
                // End grid questions user asked


    // Questions user asked Pagination
    div.search-article-toolbar(ng-if='questions.articlesWithQuestionUserAsked.length >= 1')
      md-toolbar(style="background-color:none" layout="row")
        span.flex
        ng-md-icon(icon="keyboard_arrow_left" ng-click='questions.prevOrNextPageQuestionsUserAsked(questions.current_page_questions_user_asked - 1)' ng-if="questions.current_page_questions_user_asked != 1").arrow-previous-page
