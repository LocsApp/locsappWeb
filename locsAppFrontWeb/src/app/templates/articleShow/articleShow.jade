div.article-show(layout="row" layout-align="center")
  div(flex-sm="100" flex-md="75" flex="50")

    div(layout="row" layout-align="center")
      div
        h1 {{articleShow.title}}
        br
        div.subtitle(layout="row")
          h2 By sylflo
          span
            ng-md-icon(icon="star" size="22")
            ng-md-icon(icon="star" size="22")
            ng-md-icon(icon="star" size="22")
            ng-md-icon(icon="star" size="22")
            ng-md-icon(icon="star" size="22")
            span (50)


    div(layout="row" layout-align="center")
      data-owl-carousel.owl-carousel.owl-theme(flex="50" data-options="{nav: true, " +
      "autoplay:true," +
      " " +
  "autoplayTimeout:5000, loop:true, items: 1, " +
      "lazyLoad:true, autoWidth:false}")
        .item(owl-carousel-item='', ng-repeat='url_picture in articleShow.url_pictures track by $index')
          img(src="{{url_picture}}")
          //p {{url_picture}}



    //div(layout="row" layout-align="center")
      wrap-owlcarousel( flex="50" class="owl-carousel owl-theme"
      data-options="{nav: true, autoplay:false, autoplayTimeout:5000, loop:true, items: 1, " +
      "lazyLoad:true, autoWidth:false}")
        //div(ng-if='articleShow.url_pictures[0]').item
          img(src="{{articleShow.url_pictures[0]}}")

        div.item(ng-if='articleShow.url_pictures[0]')
          img(src="{{articleShow.url_pictures[0]}}")

        div.item(ng-if='articleShow.url_pictures[1]')
          img(src="{{articleShow.url_pictures[1]}}")

        //div.item
          img(src="{{articleShow.url_pictures[1]}}")
        //div.item
          img(src="{{articleShow.url_pictures[2]}}")
        //div.item
          img(ng-if='articleShow.url_pictures[3]' src="{{articleShow.url_pictures[3]}}")


    div(layout="row")
      md-card(flex="50")
        md-card-content

          div.block-properties(layout="row")
            div.name-properties(flex="50") Price
            div.t-right(flex="50") {{articleShow.price}}$/day
          md-divider
          div.block-properties(layout="row")
            div.name-properties(flex="50") Payment
            div.t-right(flex="50")
              span(ng-repeat="payment in articleShow.meaning_payment") {{$first ? '' : ', '}} {{payment}}

          md-divider
          div.block-properties(layout="row")
            div.name-properties(flex="50") Within
            div.t-right(flex="50") {{articleShow.within}} km
          md-divider
          div.block-properties(layout="row")
            div.name-properties(flex="50") Main Category
            div.t-right(flex="50") {{articleShow.BaseCategory}}
          md-divider
          div.block-properties(layout="row")
            div.name-properties(flex="50") Sub Category
            div.t-right(flex="50") {{articleShow.SubCategory}}
          md-divider
          div.block-properties(layout="row")
            div.name-properties(flex="50") Gender
            div.t-right(flex="50") {{articleShow.sexe}}
          md-divider
          div.block-properties(layout="row")
            div.name-properties(flex="50") Size
            div.t-right(flex="50") {{articleShow.size}}
          md-divider
          div.block-properties(layout="row")
            div.name-properties(flex="50") Color
            div.t-right(flex="50") {{articleShow.color}}
          md-divider
          div.block-properties(layout="row")
            div.name-properties(flex="50") State
            div.t-right(flex="50") {{articleShow.state}}
          md-divider

      md-card.reservation(flex="50")
        md-card-content(flex="flex" layout-fill)

          div.date(layout="column" layout-align="start")
            md-datepicker( ng-model="articleShow.AskBeginLocation"
            md-placeholder="Begin location")
            md-datepicker(ng-model="articleShow.AskEndLocation" md-placeholder="End location")
            //md-button.md-raised Ask for rent

          div.rent(layout="column" flex="flex" layout-align="start" )
            md-button.md-raised Ask for rent

          div.favorite-share(layout="column" flex="flex" layout-align="end" )
            div.details
              span
                a(href='#')
                  ng-md-icon(icon="favorite")
                  span.bottom-right-md-card Add to your favorites
            div.details
              span
                ng-md-icon(icon="share")
                span.bottom-right-md-card Share it
                span
                  ng-md-icon(icon="facebook")
                  ng-md-icon(icon="twitter")

            div.details
              span
                //a(facebook class="facebookShare" data-url='http://google.com'data-shares='shares') {{ shares }}
                a(href='#')
                  ng-md-icon(icon="warning")
                  span.bottom-right-md-card Send a report






    div(layout="row" layout-align="center")
      md-divider.separator-h2(flex="45")
      h2.t-center(flex="15") Description
      md-divider.separator-h2(flex="45")

    div(layout="row" layout-align="center")
      md-card
        md-card-content
          div.description {{articleShow.description}}




    div(layout="row" layout-align="center")
      md-divider.separator-h2(flex="45")
      h2.t-center(flex="15") Questions
      md-divider.separator-h2(flex="45")

    div.question(layout="row" layout-align="center" ng-if="!articleShow.questions")
      div(layout="column")
        md-input-container.md-block
          label Be the first one to ask something
          textarea(ng-model="articleShow.askQuestion" md-maxlength="150" rows="5" md-select-on-focus)


    div.question(layout="row" layout-align="center" ng-repeat="question in articleShow.questions | limitTo: articleShow.paginationLimit()" ng-if="question.is_visible")
      div(layout="column")
        div {{question.content}} (Ask by {{question.username_author}})
        div
          ng-md-icon(icon="warning")
          ng-md-icon(icon="thumb_up")
          span +{{question.is_useful.length}}
        div(flex-offset="10") {{question.response.content}}

    div.t-center.submit(ng-show="articleShow.hasMoreItemsToShow()" ng-click="articleShow.showMoreItems()")
      md-button.md-raised Show more







    div(layout="row" layout-align="center")
      md-divider.separator-h2(flex="40")
      h2.t-center(flex="20") We Recommend
      md-divider.separator-h2(flex="40")
    div(layout='row' layout-align='center')
      data-owl-carousel.owl-carousel(data-options='{navigation: false, pagination: true, ' +
      'rewindNav : false, loop: true, autoHeight: true, autoplay:false, autoplayTimeout:1000}')
        .item(owl-carousel-item='', ng-repeat='url_picture in articleShow.url_pictures track by $index')
          img(src="{{url_picture}}")
