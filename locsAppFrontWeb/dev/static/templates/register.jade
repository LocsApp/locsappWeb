.container
    .row
        .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
            form(role='form' ng-submit='register()')
                h2
                    | Please Sign Up
                    small It's free and always will be.
                hr.colorgraph
                .row
                    .col-xs-12.col-sm-6.col-md-6
                        .form-group
                            input#first_name.form-control.input-lg(type='text', name='first_name', placeholder='First Name' ng-model='user_register.first_name' required)
                    .col-xs-12.col-sm-6.col-md-6
                        .form-group
                            input#last_name.form-control.input-lg(type='text', name='last_name', placeholder='Last Name' ng-model='user_register.last_name' required)
                .form-group
                    input#display_name.form-control.input-lg(type='text', name='username', placeholder='username' ng-model='user_register.username' required)
                .form-group
                    input#display_name.form-control.input-lg(type='text', name='display_name', placeholder='Living address' ng-model='user_register.living_address' required)

                .form-group
                    input#display_name.form-control.input-lg(type='text', name='display_name', placeholder='Billing address' ng-model='user_register.billing_address' required)

                .form-group
                    input#display_name.form-control.input-lg(type='text', name='display_name', placeholder='Phone number' ng-model='user_register.phone' required)

                .form-group
                    input#display_name.form-control.input-lg(type='password', name='password', placeholder='password' ng-model='user_register.password1' required)

                .form-group
                    input#display_name.form-control.input-lg(type='password', name='confirm_password', placeholder='confirm_password' ng-model='user_register.password2' required)

                .form-group
                    input#display_name.form-control.input-lg(type='text', name='birthdate', placeholder='birthdate' ng-model='user_register.birthdate' required)

                .form-group
                    input#email.form-control.input-lg(type='email', name='email', placeholder='Email Address' ng-model='user_register.email' required)

                .form-group
                    input#email.form-control.input-lg(type='email', name='confirm_email', placeholder='Email Address confirm' ng-model='user_register.confirm_email' required)


                hr.colorgraph
                .row
                    .col-xs-12.col-md-6
                        input.btn.btn-primary.btn-block.btn-lg(type='submit', value='Register', tabindex='7')
